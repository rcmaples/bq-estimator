{
  "name": "BQ Cost Estimator",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Quickly estimate how much a query in BQ will cost.",
  "default_locale": "en",
  "icons": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://console.cloud.google.com/bigquery?project=*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://console.cloud.google.com/bigquery?project=*"
      ],
      "css": [
        "src/styles.css"
      ],
      "js": [
        "src/main.js"
      ]
    }
  ]
}